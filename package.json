{
  "name": "ai-agent-platform",
  "version": "1.0.0",
  "type": "module",
  "description": "Enterprise-ready platform for managing AI agents",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:dashboard",
    "build:server": "tsc -p tsconfig.server.json",
    "build:dashboard": "vite build --config src/dashboard/vite.config.ts",
    "start": "concurrently \"npm run start:server\" \"npm run start:dashboard\"",
    "start:server": "node dist/server/index.js",
    "start:dashboard": "vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:dashboard\"",
    "dev:server": "NODE_NO_WARNINGS=1 tsx watch src/server/index.ts",
    "dev:dashboard": "vite",
    "test": "jest --config jest.config.cjs \"src/(?!dashboard)\" && jest --config src/dashboard/jest.config.cjs"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.9.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "vite": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", {
        "useESM": true
      }]
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "testMatch": ["**/__tests__/**/*.(test|spec).(ts|tsx|js|jsx)"],
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "moduleDirectories": ["node_modules", "src"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
